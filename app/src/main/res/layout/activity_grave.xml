<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".GraveActivity"
    android:orientation="vertical"
    android:background="@drawable/grave_background">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:id="@+id/back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_weight="1"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/grave_text_background"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Phone"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/grave_text_background"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="For the purpose of providing services as fast as possible, We would like to know your current location. We will not share this information with anybody."
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textStyle="italic"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send my location"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REQUEST"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstylegradient"
            android:textColor="#fafafa"
            android:textStyle="bold"
            android:id="@+id/request"
            android:textSize="20sp"/>
    </LinearLayout>


</LinearLayout>
